
<script type="text/javascript">
function validateForm()
{
	var x=document.forms["contactForm"]["petitioner"].value;
	if (x==null || x=="") {
		alert("Name must be filled out");
		return false;
	}

	var y=document.forms["contactForm"]["replyEmailAddress"].value;
	if (y==null || y=="") {
		alert("Email address must be filled out");
		return false;
	}
	if (!validateEmail(y)) {
		alert("You must enter a valid email address");
		return false;
	}
		
	var z=document.forms["contactForm"]["imageNumber"].value;
	if (z==null || z=="") {
		alert("Image Number must be filled out");
		return false;
	}

	return true;
}

function validateEmail(email) {
	var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
	return re.test(email);
}
</script>

